@{
    ViewData["Title"] = "Upload Excel";
}

<style>
    .message {
        position: absolute;
        right: 0;
        top: 0;
        margin: 10px;
    }
</style>

@{
    var message = ViewBag.ErrorMessage;
}

@if (message != null)
{
    <span class="card-text bg-success text-end text-white p-2 rounded-1 message">@message</span>
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <form asp-controller="Student" asp-action="UploadExcel" enctype="multipart/form-data" method="post" class="container my-2">
                            <div class="p-3">
                                <div class="row pb-2">
                                    <h3 class="mb-4">Upload Excel</h3>
                                    <hr />
                                    <div class="col-12 mb-3 form-group">
                                        <label class="d-flex mb-2" for="file">Upload Excel File</label>
                                        <input type="file" name="file" class="form-control" required>
                                    </div>
                                </div>
                                <div class="text-center pb-1 my-2">
                                    <button type="submit" class="btn btn-primary text-center px-4">Upload</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>