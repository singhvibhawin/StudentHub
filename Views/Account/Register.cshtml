@model User;

<style>
    .error-message {
        position: absolute;
        right: 0;
        top: 0;
        margin: 10px;
    }
</style>

@{
    var errorMessage = ViewBag.ErrorMessage;
}

@if (errorMessage != null)
{
    <span class="card-text bg-danger text-end text-white p-2 rounded-1 error-message">@errorMessage</span>
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body text-center">
                        <form method="post" class="container my-2">
                            <div class="p-3">
                                <div class="row pb-2">
                                    <h3 class="mb-4">Sign in</h3>
                                    <input asp-for="Username" class="form-control" value="user" hidden />
                                    <div class="col-12 mb-3">
                                        <input asp-for="Name" class="form-control" placeholder="Name"/>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="text-center pb-1 my-2">
                                    <button type="submit" class="btn btn-primary text-center px-4">Submit</button>
                                </div>
                                <div class="container text-center mt-3">
                                    <span>Already have a Account?</span> <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
